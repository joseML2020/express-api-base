{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true // Añade esta línea para habilitar el entorno de Jest
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended" // Añade la extensión del plugin de Jest
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"]
    }
  }
  